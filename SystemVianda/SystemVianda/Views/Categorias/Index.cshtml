@model IEnumerable<SystemVianda.Models.TblCategorias>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-push-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h4>Categorias</h4></div>
                        <div class="panel-body">
                            <p>
                                @Html.ActionLink("Nueva Categorias", "Create", null, htmlAttributes: new { @class = "btn btn-primary " })
                            </p>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categoria)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            <div class="bottom">
                                                @Html.ActionLink(" ", "Edit", new { id = item.IdCategoria}, new { @class = "btnc btn-sm btn-primary glyphicon glyphicon-edit", Title = "Editar" })
                                                @Html.ActionLink(" ", "Details", new { id = item.IdCategoria }, new { @class = "btnc btn-sm btn-info glyphicon glyphicon-eye-open", Title = "Detalles" })
                                                @Html.ActionLink(" ", "Delete", new { id = item.IdCategoria }, new { @class = "btnc btn-sm btn-danger glyphicon glyphicon-trash", Title = "Eliminar" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                             
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
</div>