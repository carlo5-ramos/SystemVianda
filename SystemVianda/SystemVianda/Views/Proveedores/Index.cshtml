@model IEnumerable<SystemVianda.Models.TblProveedores>

@{
    ViewBag.Title = "Index";
}

<link href="~/Scripts/datatables.min.css" rel="stylesheet" />

<script src="~/Scripts/datatables.min.js"></script>
<h4>Empleados</h4>
<hr />


<p>
    @Html.ActionLink("Nuevo Proveedor", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })



</p>
<table class="table" id="dtTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Nrc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Web)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuarios.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Nrc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Web)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    <div class="bottom">
                        @Html.ActionLink(" ", "Edit", new { id = item.IdProveedor }, new { @class = "btnc btn-sm btn-primary glyphicon glyphicon-edit", Title = "Editar" })
                        @Html.ActionLink(" ", "Details", new { id = item.IdProveedor }, new { @class = "btnc btn-sm btn-info glyphicon glyphicon-eye-open", Title = "Detalles" })
                        @Html.ActionLink(" ", "Delete", new { id = item.IdProveedor }, new { @class = "btnc btn-sm btn-danger glyphicon glyphicon-trash", Title = "Eliminar" })
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
<script src="~/Scripts/TableIdioma.js"></script>
