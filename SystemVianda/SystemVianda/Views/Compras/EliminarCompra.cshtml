@model IEnumerable<SystemVianda.Models.TblDetallesCompras>

@{
    ViewBag.Title = "EliminarCompra";
}

<div class="">
    <div class="row">
        <div class="col-sm-10">
            <h4>Detalle de Compra</h4>
        </div>
        <div class="col-sm-2">
            <a href="@Url.Action("Compras")" class="btn btn-default btn-lg">Atras</a>
        </div>
    </div>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Eliminar Compra" class="btn btn-danger btn-lg " />
    </div>
}
<p>
    <div class="">
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron alert-success">
                    <table>

                        @foreach (var factura in ViewBag.factura)
                        {
                            <tr>
                                <td>Fecha:</td>
                                <td>@factura.FechaCompra</td>
                            </tr>
                            <tr>
                                <td>Proveedor: </td>
                                <td>@ViewBag.pro</td>
                            </tr>
                            <tr>
                                <td># Factura:</td>
                                <td>@factura.NumeroFactura</td>
                            </tr>

                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Compras.CodigoFactura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productos.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PesoFactura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TacticoFactura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Merma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Compras.CodigoFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productos.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PesoFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacticoFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Merma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
            <td>@Html.ActionLink(" ", "Delete", new { id = item.IdDetallesC }, new { @class = "btn btn-danger glyphicon glyphicon-trash", }) </td>

        </tr>
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td><font color="red">Total</font></td>
        <td>
            @ViewBag.Total
        </td>
        <td></td>
    </tr>
</table>