@model SystemVianda.Models.TblAsignacionRuta

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-push-12">
                    <div class="panel panel-danger">
                        <div class="panel-heading"><h4>Eliminar Ruta</h4></div>
                        <div class="panel-body">
                            <h3>Esta seguro que desea eliminar este registro?</h3>
                           
                            <dl class="dl-horizontal">
                                <dt>
                                    @*@Html.DisplayNameFor(model => model.Empleado.Nombre)*@
                                    Empleado Asignado
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Empleado.Nombre)
                                </dd>

                                <dt>
                                    @*@Html.DisplayNameFor(model => model.Rutas.Nombre)*@
                                    Rutas Asignada
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Rutas.Nombre)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Fecha)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Fecha)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-actions no-color">
                                    <input type="submit" value="Eliminar" class="btn btn-danger " /> |
                                    @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default " })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
