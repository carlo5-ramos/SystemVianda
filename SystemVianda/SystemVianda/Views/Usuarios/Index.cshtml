<div class="">
    <form action="@Url.Action("Index","Users")" class="form-horizontal" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="txtBuscar" placeholder="Busqueda por nombre" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Enviar</button>
        </div>
    </form>
</div>

<div class="row">
    @{
        foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-6">
                <div class="card hovercard">
                    <div class="cardheader">
                    </div>
                    <div class="avatar">
                        <img alt="" src="~/Content/multi-user-icon.png" width="80" />
                    </div>
                    <div class="info">
                        <div class="title">


                            @Html.DisplayFor(ModelItem => item.Usuario)
                            @Html.DisplayFor(ModelItem => item.Estado)
                        </div>
                        @*<div class="desc">Telefono: @Html.DisplayFor(modelItem => item.Telefono)</div>*@

                    </div>
                    <div class="bottom">
                        @if (Convert.ToString(Session["Rol"]) == "Administrador")
                        {
                            @Html.ActionLink(" ", "NuevaPass", new { id = item.IdUsuario }, new { @class = "btnc btn-sm btn-primary glyphicon glyphicon-asterisk", Title = "Nueva Contraseña" })
                            @Html.ActionLink(" ", "Edit", new { id = item.IdUsuario }, new { @class = "btnc btn-sm btn-primary glyphicon glyphicon-edit", Title = "Editar" })
                            @Html.ActionLink(" ", "Details", new { id = item.IdUsuario }, new { @class = "btnc btn-sm btn-info glyphicon glyphicon-eye-open", Title = "Ver Detalles" })
                            @Html.ActionLink(" ", "Delete", new { id = item.IdUsuario }, new { @class = "btnc btn-sm btn-danger glyphicon glyphicon-trash", Title = "Eliminar" })
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
